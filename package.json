{
	"name": "sales_system",
	"module": "index.ts",
	"type": "module",
	"private": true,
	"scripts": {
		"dev": "bun --watch src/main.ts",
		"start": "bun src/main.ts",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate",
		"db:studio": "drizzle-kit studio",
		"db:push": "drizzle-kit push",
		"db:drop": "drizzle-kit drop",
		"docker:up": "docker compose up -d",
		"docker:down": "docker compose down",
		"docker:logs": "docker compose logs -f",
		"docker:clean": "docker compose down -v",
		"setup": "cp -n .env.example .env 2>/dev/null || true && bun install && docker compose up -d && sleep 5 && bun run db:generate && bun run db:migrate",
		"reset": "docker compose down -v && docker compose up -d && sleep 5 && bun run db:generate && bun run db:migrate"
	},
	"devDependencies": {
		"@biomejs/biome": "2.2.4",
		"@types/bun": "latest",
		"drizzle-kit": "^0.31.5",
		"tsx": "^4.20.6"
	},
	"peerDependencies": {
		"typescript": "^5"
	},
	"dependencies": {
		"@elysiajs/swagger": "^1.3.1",
		"drizzle-orm": "^0.44.5",
		"elysia": "^1.4.9",
		"postgres": "^3.4.7"
	}
}
